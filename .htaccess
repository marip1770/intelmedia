RewriteEngine On
#RewriteRule ^tes$ index.php [L]
RewriteBase /intelmedia/

# Abaikan file & folder asli
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Root URL langsung ke index.php
RewriteRule ^$ index.php [L]

# --- Friendly Search ---
# Jika ada request ke list_magazine.php?search=keyword -> redirect ke /search/keyword
RewriteCond %{THE_REQUEST} \s/list_magazine\.php\?search=([^\s&]+) [NC]
RewriteRule ^list_magazine\.php$ search/%1? [R=301,L]

# Tangani /search/keyword -> list_magazine.php?search=keyword
RewriteRule ^search/([^/]+)/?$ list_magazine.php?search=$1 [L,QSA]

# Slug kategori/artikel diarahkan ke router.php
RewriteRule ^([a-z0-9\-]+)/?$ router.php?slug=$1 [L,QSA]
